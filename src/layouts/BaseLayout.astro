---
import "@picocss/pico/css/pico.blue.min.css";
import "../styles/global.css";

const { pageTitle } = Astro.props;
const siteName = "DalBit Solutions";
const fullTitle = pageTitle ? `${pageTitle} | ${siteName}` : siteName;
---

<html lang="de">
    <head>
        <meta charset="utf-8" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{fullTitle}</title>
    </head>
    <body>
        <header>
            <nav class="container">
                <ul>
                    <li>
                        <a title="Startseite" href="/"
                            ><img
                                src="/dalbit-logo-text.svg"
                                width="117"
                                alt="DalBit Logo"
                            /></a
                        >
                    </li>
                </ul>
                <ul>
                    <li><a href="/about">Über uns</a></li>
                    <li><a href="/services">Leistungen</a></li>
                    <li><a href="/blog">Blog</a></li>
                    <li><a href="/contact">Kontakt</a></li>
                    <li>
                        <input
                            type="checkbox"
                            id="menu-button"
                            class="sr-only"
                        />
                        <label for="menu-button">-</label>
                    </li>
                </ul>
            </nav>
        </header>
        <main>
            <slot />
        </main>
        <aside id="menu">
            <nav class="container">
                <ul>
                    <li>
                        <a title="Startseite" href="/"
                            ><img
                                src="/dalbit-logo-text.svg"
                                width="117"
                                alt="DalBit Logo"
                            /></a
                        >
                    </li>
                </ul>
                <ul>
                    <li><a href="/about">Über uns</a></li>
                    <li><a href="/services">Leistungen</a></li>
                    <li><a href="/blog">Blog</a></li>
                    <li><a href="/contact">Kontakt</a></li>
                </ul>
            </nav>
        </aside>
        <footer>
            <hr />
            <nav class="container">
                <ul>
                    <li><a href="/imprint">Impressum</a></li>
                    <li><a href="/contact">Kontakt</a></li>
                    <li><a href="/privacy">Datenschutz</a></li>
                </ul>
                <ul>
                    <li>© 2024 DalBit Solutions - Alexander Fridlin</li>
                </ul>
            </nav>
        </footer>
    </body>
</html>

<style>
    main {
        padding-top: 0 !important;
    }

    #menu {
        background-color: var(--pico-background-color);
        display: none;
        height: 100%;
        left: 0;
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 10;
    }

    #menu:target {
        display: unset;
    }
</style>
