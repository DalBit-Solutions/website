---
import "@picocss/pico/css/pico.blue.min.css";
import "../styles/global.css";
import Navigation from '../components/Navigation.svelte';

const { pageTitle } = Astro.props;
const siteName = "DalBit Solutions";
const fullTitle = pageTitle ? `${pageTitle} | ${siteName}` : siteName;
---

<html lang="de">
    <head>
        <meta charset="utf-8" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{fullTitle}</title>
    </head>
    <body>
        <header>
            <Navigation />
        </header>
        <main>
            <slot />
        </main>
        <hr />
        <footer>
            <aside class="display-none-large">
                <nav class="container">
                    <ul>
                        <li><a href="/impressum">Impressum</a></li>
                        <li><a href="/kontakt">Kontakt</a></li>
                        <li><a href="/datenschutz">Datenschutz</a></li>
                        <li>© 2024 DalBit Solutions - Alexander Fridlin</li>
                    </ul>
                </nav>
            </aside>
            <nav class="display-none display-flex-large container">
                <ul>
                    <li><a href="/impressum">Impressum</a></li>
                    <li><a href="/kontakt">Kontakt</a></li>
                    <li><a href="/datenschutz">Datenschutz</a></li>
                </ul>
                <ul>
                    <li>© 2024 DalBit Solutions - Alexander Fridlin</li>
                </ul>
            </nav>
        </footer>
    </body>
</html>

<style>
    header + main {
        padding-top: 0;
    }
</style>
